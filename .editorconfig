root = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4


[Makefile]
indent_style = tab
indent_size = 4

[*.{c,h,cpp,hpp}]
indent_style = tab
indent_size = 4

[*.{js,html,php,css}]
indent_style = space
indent_size = 2

